<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OldMainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/connect_clovadesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clova Deskに接続する" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/disconnect_clovadesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clova Deskから切断する" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/check_clovadesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check device" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/firmware_clovadesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="get firmware details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wifilist_clovadesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="get wifi list" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/setauth_clovadesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set auth" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/protocolver_clovadesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="get protocol ver" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/prepareinfo_clovadesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="get prepare info" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>